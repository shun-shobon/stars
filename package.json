{
	"name": "stars",
	"version": "0.1.0",
	"type": "module",
	"description": "WebGPUを使用した星空レンダリングWebアプリケーション。東京からの星空をリアルタイムで表示します。",
	"author": "NISHIZAWA Shuntaro <me@s2n.tech> (https://s2n.tech/)",
	"license": "MIT",
	"private": true,
	"packageManager": "pnpm@10.30.2",
	"scripts": {
		"build": "vite build",
		"dev": "vite",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"gen": "pnpm /^gen:.*/ && pnpm format",
		"gen:constellations": "tsx scripts/convert-constellation-data.ts",
		"gen:stars": "tsx scripts/preprocess-stars.ts",
		"lint": "eslint .",
		"lint:fix": "eslint --fix .",
		"preview": "wrangler dev",
		"typecheck": "tsc --noEmit",
		"typegen": "wrangler types"
	},
	"dependencies": {
		"@base-ui/react": "1.2.0",
		"jotai": "2.18.0",
		"react": "19.2.4",
		"react-dom": "19.2.4",
		"tailwindcss": "4.2.1"
	},
	"devDependencies": {
		"@cloudflare/vite-plugin": "1.25.5",
		"@shun-shobon/style-guide": "4.1.1",
		"@tailwindcss/vite": "4.2.1",
		"@tsconfig/strictest": "2.0.8",
		"@tsconfig/vite-react": "7.0.2",
		"@types/node": "24.10.13",
		"@types/react": "19.2.14",
		"@types/react-dom": "19.2.3",
		"@vitejs/plugin-react": "5.1.4",
		"@webgpu/types": "0.1.69",
		"babel-plugin-react-compiler": "1.0.0",
		"eslint": "9.39.3",
		"prettier": "3.8.1",
		"tsx": "4.21.0",
		"typescript": "5.9.3",
		"vite": "7.3.1",
		"vite-tsconfig-paths": "6.1.1",
		"wrangler": "4.68.1"
	}
}
